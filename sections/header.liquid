<div class="relative bg-white " style="background: radial-gradient(circle, rgba(225,141,239,1) 0%, rgba(255,255,255,1) 100%); position: fixed;
top: 0;
right: 0;
left: 0;
z-index: 1030;">
    <div class="mx-auto px-4 ">
        <div class="flex justify-center item-center py-6 md:justify-start md:space-x-10">
            {% comment %}  storename{% endcomment %}
            <div class="div flex justify-start lg:flex-1 truncate">
                
                    <img src="../assets/logo.png" alt="img not available" style=" width: 15%;
                    height: 40px;">
               
            </div>
            {% comment %} navigation menu {% endcomment %}
            <div class="hidden md:flex space-x-10">
                {%for link in section.settings.menu.links%}
                    {% if link.links != blank %}
                        <div class="relative">
                            <button class="inline-flex items-center">
                               {{link.title}}
                               {% render 'icon_dropdown' %}
                            </button>

                        </div>
                        {% else %}
                            <a href="{{link.url}}" class="text-base text-grey-500 hover:text-grey-700">
                                {{link.title}}
                            </a>
                         
                    {% endif %}


                {%endfor%}
            </div>
            {% comment %} cart button {% endcomment %}
           
            <input type="checkbox" id="cart-toggle" class="cart-toggle">
        <label for="cart-toggle" class="cart-icon">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M15.75 10.5V6a3.75 3.75 0 1 0-7.5 0v4.5m11.356-1.993 1.263 12c.07.665-.45 1.243-1.119 1.243H4.25a1.125 1.125 0 0 1-1.12-1.243l1.264-12A1.125 1.125 0 0 1 5.513 7.5h12.974c.576 0 1.059.435 1.119 1.007ZM8.625 10.5a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Zm7.5 0a.375.375 0 1 1-.75 0 .375.375 0 0 1 .75 0Z" />
              </svg>
        </label>
            <div class="cart-slider">
            <a href="/cart" class="view-cart">View Cart</a> 
            <div class="slider-container">
                <ul class="slider">
                    {% for item in cart.items %}
                        <li>
                            <img src="{{ item.product.featured_image.src | img_url: 'medium' }}" alt="{{ item.product.title }}">
                           <p>{{ item.product.title }}</p>
                            <p>{{ item.quantity }} x {{ item.price | money }}</p>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>

        </div>
    </div>
</div>

{% schema  %} 
{
    "name": "header",
    "settings": [
        {
            "type": "link_list",
            "id": "menu",
            "default": "main-menu",
            "label": "heading navigation menu"
        }
    ]

}
{% endschema %}
<style>
.view-cart{
    font-size: 18px;
    color: blue !important;
    float: right;
}
.cart-icon {
    cursor: pointer; 
}


.cart-toggle {
    display: none;
}


.cart-slider {
    position: absolute;
    top: 0;
    width: 300px; 
    height:100vh; 
    background-color: white;
    border-left: 1px solid #ccc; 
    padding: 20px;
    z-index: 999;
    transition: right 0.3s ease; 
    margin-top: 4rem;
    display: none;
}


.cart-toggle:checked + .cart-icon + .cart-slider {
    right: 0; 
    display: block; 
}


.slider-container {
    overflow: hidden;
}

.slider {
    list-style-type: none;
    padding: 0;
    margin: 0;
    display: flex;
    flex-direction: column;
    gap: 10px; 
}

.slider li img {
    max-width: 100px;
    height: auto;
}

.slider li p {
    margin: 0;
    font-size: 14px;
}

.remove-from-cart {
    background-color: #ff6666;
    color: white;
    border: none;
    padding: 5px 10px;
    cursor: pointer;
    border-radius: 4px;
}

.remove-from-cart:hover {
    background-color: #ff4d4d;
}
</style>

<link rel="stylesheet" href="{{ 'collection.list.css' | asset_url }}" media="print" onload="this.media='all'">


{% paginate collection.products by 2 %}
  <h1>{{ collection.title }}</h1>
  {% for product in collection.products %}
    <div class="collection-product">
      <a href="{{ product.url | within: collection }}">{{ product.title }}</a>
      <span class="price">{{ product.price | money }}</span>
      {% unless product.available %}
        <br><strong class="sold-out">Sold Out</strong>
      {% endunless %}
      <a href="{{ product.url | within: collection }}">
        <img src="{{ product.featured_image.src | img_url: 'large' }}" alt="{{ product.featured_image.alt | escape }}" width="500px" height="500px">
      </a>
    </div>
  {% else %}
    <p>No matches</p>
  {% endfor %}
  {% if paginate.pages > 1 %}
    {{ paginate | default_pagination }}
  {% endif %}
{% endpaginate %}
